@inject IJSRuntime jsRuntime
@namespace EclipsePageLibrary.CustomComponents.RadzenReusableGridViewOnly
@using Microsoft.JSInterop
@typeparam TItem
<RadzenDataGrid @ref="grid" AllowSorting="@AllowSorting" AllowColumnResize="@AllowColumnResize"
                Data="@Items" TItem="TItem">
    <Columns>
        @ChildContent
    </Columns>
</RadzenDataGrid>

@code {
    [Parameter] public string GridName { get; set; }

    [Parameter] public bool AllowSorting { get; set; } = true;

    [Parameter] public bool AllowColumnResize { get; set; } = true;

    [Parameter] public List<TItem> Items { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    RadzenDataGrid<TItem> grid;
}